<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"  
                 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"  
                 x:Class="Ejercicio9.LoginPage"  
                 Title="LoginPage">

    <ContentPage.Content>
        <StackLayout>
            <Label Text="User Name(Flash)"/>
            <Entry x:Name="UserNameEntry" Placeholder="UserName"/>
            <Label Text="Password(flash)"/>
            <Entry x:Name="PasswordEntry" IsPassword="True"/>
            <Button Text="Click to Login" Clicked="Login_Clicked"/>
            <Label x:Name="LoginFaild"/>
            <Label x:Name="LoginFaild2"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>